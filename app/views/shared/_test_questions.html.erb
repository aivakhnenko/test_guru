<h1>Test <%= @test.title %></h1>

<p><strong>Title:</strong> <%= @test.title %></p>
<p><strong>Level:</strong> <%= @test.level %></p>
<p><strong>Category:</strong> <%= @test.category.title %></p>

<table>
  <tr>
    <th>Body</th>
    <th colspan="3">Actions</th>
  </tr>
  
  <%= render @questions %>
</table>

<p>
  <%= link_to 'Edit test', edit_test_path(@test) %> | 
  <%= link_to 'New question', new_test_question_path(@test) %> | 
  <%= link_to 'Back to all tests', tests_path %>
</p>