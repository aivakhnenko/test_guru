<tr>
  <th scope="row" class="text-left"><%= badge.name %></th>
  <td><%= t("activerecord.values.badge.badge_type.#{badge.badge_type}") %></td>
  <td><%= badge.category&.title %></td>
  <td><%= badge.level %></td>
  <td class="w-25 align-middle">
    <div class="btn-group" role="group" >
      <%= link_to t('general.show'), admin_badge_path(badge), role: 'button', class: 'btn btn-outline-dark btn-sm' %>
      <%= link_to t('general.edit'), edit_admin_badge_path(badge), role: 'button', class: 'btn btn-outline-dark btn-sm' %>
      <%= link_to t('general.delete'), admin_badge_path(badge), role: 'button', class: 'btn btn-outline-dark btn-sm', method: :delete, data: { confirm: t('general.are_you_sure?') } %>
    </div>
  </td>
</tr>