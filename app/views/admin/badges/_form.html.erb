<%= form_with model: [:admin, @badge], local: true do |form| %>
  <div class="form-group">
    <%= render 'shared/errors', resource: @badge %>

    <p>
      <%= form.label :name %>:
      <%= form.text_field :name, id: :badge_name, class: "form-control" %>
    </p>

    <p>
      <%= form.label :image_url %>:
      <%= form.text_field :image_url, id: :badge_image_url, class: "form-control" %>
    </p>

    <%= content_tag :p, class: 'badge-type' do %>
      <%= form.label :badge_type %>:
      <%= form.collection_select :badge_type, badge_types_locale, :first, :last, prompt: true, class: "form-control" %>
    <% end %>

    <%= content_tag :p, class: 'badge-level hide' do %>
      <%= form.label :level %>:
      <%= form.number_field :level, id: :badge_level, class: "form-control" %>
    <% end %>

    <%= content_tag :p, class: 'badge-category hide' do %>
      <%= form.label :category_id %>:
      <%= form.collection_select :category_id, Category.all, :id, :title, prompt: true, class: "form-control" %>
    <% end %>

    <%= form.submit class: "btn btn-secondary btn-sm" %>
  </div>
<% end %>