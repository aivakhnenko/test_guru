<%= form_with model: [:admin, @question, @answer], local: true do |form| %>
  <div class="form-group">
    <%= render 'shared/errors', resource: @answer %>

    <p>
      <%= form.label :text %>
      <%= form.text_area :text, id: :answer_text, rows: 7, cols: 60, class: "form-control" %>
    </p>

    <p>
      <%= form.label :correct %>: 
      <%= form.check_box :correct, id: :answer_correct, class: "form-control" %>
    </p>

    <%= form.submit class: "btn btn-secondary btn-sm" %>
  </div>
<% end %>