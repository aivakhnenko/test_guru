<h1><%= question_header(@question) %></h1>

<%= form_with model: model, local: true do |form| %>
  <div class="form-group">
    <%= render 'shared/errors', resource: @question %>

    <p>
      <%= form.label :body %>
      <%= form.text_field :body, id: :question_body, class: "form-control" %>
    </p>

    <%= form.submit class: "btn btn-secondary btn-sm" %>
  </div>
<% end %>