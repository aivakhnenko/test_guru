<h1>Question <%= @question.id %></h1>

<p><strong>Body:</strong> <%= @question.body %></p>

<h2>Answers</h2>

<%= link_to 'New answer', new_admin_question_answer_path(@question) %>

<ol>
  <%= render @question.answers %>
</ol>

<p>
  <%= link_to 'Edit', edit_admin_question_path(@question) %> | 
  <%= link_to "Back to test #{@question.test.title}", admin_test_path(@question.test) %>
  <%= link_to 'Back to all tests', admin_tests_path %>
</p>