<h1><%= t('.header', title: @test.title) %></h1>

<p><strong><%= Test.human_attribute_name(:title) %>:</strong> <%= @test.title %></p>
<p><strong><%= Test.human_attribute_name(:level) %>:</strong> <%= @test.level %></p>
<p><strong><%= Test.human_attribute_name(:category_id) %>:</strong> <%= @test.category.title %></p>

<table>
  <tr>
    <th><%= Question.model_name.human %></th>
    <th colspan="3"><%= t('general.actions') %></th>
  </tr>
  
  <%= render @questions %>
</table>

<p>
  <%= link_to t('.edit_test'), edit_admin_test_path(@test) %> | 
  <%= link_to t('.new_question'), new_admin_test_question_path(@test) %> | 
  <%= link_to t('general.back_to_all_tests'), admin_tests_path %>
</p>