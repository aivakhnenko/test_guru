<div class="row">
  <div class="col">
    <h1><%= t('.header') %></h1>

    <table class="table table-sm text-center">
      <thead class="thead-light">
        <tr>
          <th scope="col" class="sort-by-title pointer">
            <%= Badge.human_attribute_name(:name) %>
            <%= octicon 'arrow-up', class: 'text-success hide' %>
            <%= octicon 'arrow-down', class: 'text-success hide' %>
          </th>
          <th scope="col"><%= Badge.human_attribute_name(:badge_type) %></th>
          <th scope="col"><%= Category.model_name.human %></th>
          <th scope="col"><%= Badge.human_attribute_name(:level) %></th>
          <th scope="col"><%= UserBadge.human_attribute_name(:created_at) %></th>
        </tr>
      </thead>
      <tbody>
        <%= render @badges %>
      </tbody>
    </table>

    <div class="btn-group" role="group" >
      <%= link_to t('general.back_to_all_tests'), tests_path, role: 'button', class: 'btn btn-outline-dark btn-sm' %>
    </div>
  </div>
</div>